<Window x:Class="ModernUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModernUI" xmlns:IconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="380"
        AllowsTransparency="True" Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        >
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Border CornerRadius="10" Grid.RowSpan="2">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#7be9f6" Offset="0.0"></GradientStop>
                        <GradientStop Color="#f083da" Offset="1"></GradientStop>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>


            <StackPanel VerticalAlignment="Center">
                <Image Source="Image/house2.jpg" Width="100"/>
                <TextBlock Text="Modern Design" 
                           FontWeight="Light" 
                           FontFamily="helvetica" 
                           FontSize="22" 
                           Foreground="Black" 
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <TextBox FontFamily="Helvetica" 
                         FontWeight="Light" 
                         Text="Username" 
                         FontSize="20" 
                         HorizontalAlignment="Center" 
                         Background="Transparent" 
                         Foreground="Black" 
                         BorderThickness="0" 
                         Width="235" 
                         HorizontalContentAlignment="Left" 
                         Opacity="0.5"
                         Height="25"
                         Margin="63,0,0,0"    
                         />
                    <IconPacks:PackIconMaterial Kind="Account" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"
                                            Foreground="Black"/>
                </StackPanel>
                <Border Width="250"
                    Height="2"
                    Opacity="0.5"
                    Background="Black"/>

                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <PasswordBox FontFamily="Helvetica" 
                         FontWeight="Light" 
                         Password="Password" 
                         FontSize="20" 
                         HorizontalAlignment="Center" 
                         Background="Transparent" 
                         Foreground="Black" 
                         BorderThickness="0" 
                         Width="235" 
                         HorizontalContentAlignment="Left" 
                         Opacity="0.5"
                         Height="25"
                         Margin="63,0,0,0"    
                         />
                    <IconPacks:PackIconMaterial Kind="FormTextboxPassword" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"
                                            Foreground="Black"/>
                </StackPanel>
                <Border Width="250"
                    Height="2"
                    Opacity="0.5"
                    Background="Black"/>

                <StackPanel Orientation="Horizontal" Margin="0,50,0,0">
                    <Button Width="100" Height="40" Content="LOGIN" Margin="60,0,60,0"/>
                    <Button Width="100" Height="40" Content="REGISTER"/>
                </StackPanel>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
